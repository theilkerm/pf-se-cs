# Production Environment Variables
# Copy this file to .env and modify the values for your production server

# Frontend API URL - Change this to your production server
NEXT_PUBLIC_API_URL=http://your-production-domain.com:3001/api/v1

# Backend Environment Variables
NODE_ENV=production
FRONTEND_URL=http://your-production-domain.com:3000
CORS_ORIGIN=http://your-production-domain.com:3000

# Database Configuration
MONGO_URI=mongodb://mongo:27017/e-commerce-db

# Server Configuration
PORT=3001
