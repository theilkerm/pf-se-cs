# Centralized Environment Configuration
# Copy this file to .env for local development
# Copy this file to .env.production for production deployment

# Backend Configuration
BACKEND_PORT=3001
BACKEND_HOST=localhost
BACKEND_URL=http://${BACKEND_HOST}:${BACKEND_PORT}

# Frontend Configuration  
FRONTEND_PORT=3000
FRONTEND_HOST=localhost
FRONTEND_URL=http://${FRONTEND_HOST}:${FRONTEND_PORT}

# MongoDB Configuration
MONGO_PORT=27017
MONGO_URI=mongodb://mongo:27017/e-commerce-db

# Production Override (uncomment and modify for production)
# BACKEND_HOST=your-domain-or-ip
# FRONTEND_HOST=your-domain-or-ip
# BACKEND_URL=https://${BACKEND_HOST}
# FRONTEND_URL=https://${FRONTEND_HOST}:${FRONTEND_PORT}
